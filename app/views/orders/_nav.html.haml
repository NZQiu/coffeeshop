- unless defined?(active)
  - active = 0

%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %a.navbar-brand{:href => root_path}
        =image_tag "logo.png"
    .navbar-collapse
      %ul.nav.navbar-nav
        %li{ class: (active == 0 ? 'active' : nil) }
          %a{:href => root_path}
            %i.fa.fa-home
            %span Home
        %li{ class: (active == 1 ? 'active' : nil) }
          %a{:href => new_order_path}
            %i.fa.fa-coffee
            %span Order
